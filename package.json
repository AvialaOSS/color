{
  "name": "@aviala-design/color",
  "version": "0.3.0",
  "description": "Aviala Design color utils",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "jest",
    "dev": "vite --open /demo/advanced.html",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:sync-readme": "node scripts/sync-readme.js",
    "docs:all": "npm run docs:generate && npm run docs:sync-readme",
    "predocs:generate": "npm run type-check",
    "prepublishOnly": "npm run build && npm run docs:all",
    "prepare": "node -e \"try{require('fs').mkdirSync('.husky')}catch(e){}\" && node -e \"try{require('fs').copyFileSync('.husky/pre-commit.sample', '.husky/pre-commit')}catch(e){}\""
  },
  "keywords": [
    "Color",
    "utils"
  ],
  "author": "Aviala Design Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/avialaOSS/color"
  },
  "dependencies": {
    "color": "^3.1.3"
  },
  "devDependencies": {
    "@types/color": "^3.0.6",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "typescript": "^5.3.3",
    "vite": "^6.2.3",
    "vite-plugin-dts": "^4.5.4"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
